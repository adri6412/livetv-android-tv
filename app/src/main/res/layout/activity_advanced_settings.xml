<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@color/background_dark"
    tools:context=".ui.settings.AdvancedSettingsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Impostazioni Avanzate"
        android:textSize="32sp"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sezione Avvio Automatico -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avvio Automatico"
                android:textSize="24sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Avvio automatico abilitato"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary" />

                <Switch
                    android:id="@+id/switchAutoStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Avvia su schermo acceso"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary" />

                <Switch
                    android:id="@+id/switchScreenOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Servizio di background"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary" />

                <Switch
                    android:id="@+id/switchBackgroundService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Avvia al boot del sistema"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary" />

                <Switch
                    android:id="@+id/switchBootStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <!-- Sezione App Predefinita -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App Predefinita"
                android:textSize="24sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Imposta come app predefinita per la TV"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary" />

                <Switch
                    android:id="@+id/switchDefaultApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />
            </LinearLayout>

            <!-- Pulsanti Impostazioni Sistema -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Impostazioni Sistema"
                android:textSize="24sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="16dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonBatterySettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Impostazioni Batteria"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_primary"
                android:textColor="@color/text_primary" />

            <Button
                android:id="@+id/buttonSystemSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Impostazioni Sistema"
                android:textSize="18sp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/button_primary"
                android:textColor="@color/text_primary" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
