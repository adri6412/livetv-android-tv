<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema base dell'applicazione -->
    <style name="Theme.LiveTV" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
    </style>

    <!-- Tema per Android TV Leanback -->
    <style name="Theme.LiveTV.Leanback" parent="Theme.Leanback">
        <item name="colorPrimary">@color/tv_primary</item>
        <item name="colorAccent">@color/tv_accent</item>
        <item name="android:windowBackground">@color/tv_background</item>
        <item name="android:colorBackground">@color/tv_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Tema per il player video -->
    <style name="Theme.LiveTV.Player" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/player_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Tema per le impostazioni -->
    <style name="Theme.LiveTV.Settings" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/tv_primary</item>
        <item name="colorAccent">@color/tv_accent</item>
        <item name="android:windowBackground">@color/tv_background</item>
    </style>

    <!-- Tema per HbbTV -->
    <style name="Theme.LiveTV.HbbTV" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/player_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:hardwareAccelerated">true</item>
    </style>

    <!-- Tema per EPG -->
    <style name="Theme.LiveTV.EPG" parent="Theme.Leanback">
        <item name="colorPrimary">@color/tv_primary</item>
        <item name="colorAccent">@color/tv_accent</item>
        <item name="android:windowBackground">@color/epg_background</item>
    </style>

    <!-- Stili per i testi -->
    <style name="TextAppearance.LiveTV.Title" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.LiveTV.Subtitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.LiveTV.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Stili per i pulsanti -->
    <style name="Button.LiveTV" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Stili per le card -->
    <style name="Card.LiveTV" parent="CardView">
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Stili per il player -->
    <style name="PlayerControls">
        <item name="android:background">@color/player_controls_background</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="PlayerText">
        <item name="android:textColor">@color/player_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">@color/transparent</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- Stili per EPG -->
    <style name="EPGTimeSlot">
        <item name="android:background">@drawable/epg_timeslot_selector</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="EPGProgramTitle">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="EPGProgramTime">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>