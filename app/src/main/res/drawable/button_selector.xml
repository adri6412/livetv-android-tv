<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/channel_focused" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/tv_accent" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/channel_selected" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/tv_surface" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>